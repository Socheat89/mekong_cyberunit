# Security: Disable Directory Listing
Options -Indexes

RewriteEngine On
RewriteBase /Mekong_CyberUnit/

# Security: Block direct access to core system folders
RewriteRule ^(config|core|middleware|database|logs|vendor|modules)/.*$ - [F,L]

# Handle images, CSS, JS directly
RewriteCond %{REQUEST_FILENAME} -f
RewriteCond %{REQUEST_URI} \.(css|js|jpg|jpeg|png|gif|svg|ico|webp|woff|woff2|ttf|otf)$ [NC]
RewriteRule . - [L]

# Route everything else to index.php
RewriteRule . index.php [L]